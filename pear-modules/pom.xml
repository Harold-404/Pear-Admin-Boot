<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!-- 仓库信息 -->
    <parent>
        <groupId>com</groupId>
        <artifactId>pearadmin</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>

    <!-- 仓库地址 -->
    <groupId>com.pearadmin</groupId>
    <artifactId>pear-modules</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>pear-modules</name>
    <description>Demo project for Spring Boot</description>
    <packaging>pom</packaging>

    <!-- 依赖管理 -->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.pearadmin</groupId>
                <artifactId>pear-common</artifactId>
                <version>0.0.1-SNAPSHOT</version>
            </dependency>
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>1.18.12</version>
                <scope>provided</scope>
            </dependency>
            <dependency>
                <groupId>org.mybatis.spring.boot</groupId>
                <artifactId>mybatis-spring-boot-starter</artifactId>
                <version>1.1.1</version>
            </dependency>

        </dependencies>
    </dependencyManagement>

    <!-- 模块管理 -->
    <modules>
        <module>pear-system</module>     <!-- 系统业务模块 -->
        <module>pear-schedule</module>   <!-- 定时任务模块 -->
        <module>pear-generate</module>   <!-- 代码生成模块 -->
        <module>pear-security</module>   <!-- 系统安全模块 -->
        <module>pear-datasource</module> <!-- 多数据源模块 -->
    </modules>

</project>
