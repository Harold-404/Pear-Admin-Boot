<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.pearadmin.resource.configure.mapper.ConfigureMapper">

    <resultMap id="SysConfigMap" type="com.pearadmin.resource.configure.domain.Configure">
        <id column="config_id" property="configId"></id>
        <result column="config_name" property="configName"></result>
        <result column="config_value" property="configValue"></result>
        <result column="config_code" property="configCode"></result>
        <result column="config_type" property="configType"></result>
    </resultMap>

    <select id="selectList" resultMap="SysConfigMap">
        select * from sys_config
    </select>

    <select id="selectById" resultMap="SysConfigMap">
        select * from sys_config
        where config_id = #{configId}
    </select>

    <insert id="insert" parameterType="com.pearadmin.resource.configure.domain.Configure">
        insert into sys_config
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="configId!=null">
                config_id,
            </if>
            <if test="configName!=null">
                config_name,
            </if>
            <if test="configCode!=null">
                config_code,
            </if>
            <if test="configValue!=null">
                config_value,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="configId!=null">
                #{configId},
            </if>
            <if test="configName!=null">
                #{configName},
            </if>
            <if test="configCode!=null">
                #{configCode},
            </if>
            <if test="configValue!=null">
                #{configValue},
            </if>
        </trim>
    </insert>

    <!-- 根据 Id 修改角色数据 -->
    <update id="updateById" parameterType="com.pearadmin.resource.configure.domain.Configure">
        update sys_config
        <set>
            <if test="configName!=null">
                config_id=#{configName},
            </if>
            <if test="configCode!=null">
                config_code=#{configCode},
            </if>
            <if test="configValue!=null">
                config_value=#{configValue},
            </if>
        </set>
        where config_id = #{configId}
    </update>

    <!-- 根据 Id 删除用户数据 -->
    <delete id="deleteById" parameterType="string">
          delete from sys_config where config_id = #{id}
    </delete>

</mapper>